{% trans_default_domain 'FOSUserBundle' %}
<div class="register-box">
    <div class="login-logo">
      <b>Version</b> Control System
    </div>
    <div class="box box-primary">
        <div class="box-body">
            <p>A web based git client. Used to commit, merge, branch code on unix based webservers.</p>
        </div>
    </div>
    <!-- /.login-logo -->
    <div class="register-box-body">
      <p class="register-box-msg">Register to gain access</p>

        {{ form_start(form) }}
            <div class="form-group">

            </div>
            <div class="form-group has-feedback">
                {{ form_errors(form.username) }}
                {{ form_widget(form.username,{ 'attr': { 'class': 'form-control', 'placeholder':'Username'}}) }}
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                {{ form_errors(form.name) }}
                {{ form_widget(form.name,{ 'attr': { 'class': 'form-control', 'placeholder':'Name'}}) }}
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                {{ form_errors(form.email) }}
                {{ form_widget(form.email,{ 'attr': { 'class': 'form-control', 'placeholder':'Email'}}) }}
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                {{ form_errors(form.plainPassword.first) }}
                {{ form_widget(form.plainPassword.first,{ 'attr': { 'class': 'form-control', 'placeholder':'Password'}}) }}
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                {{ form_errors(form.plainPassword.second) }}
                {{ form_widget(form.plainPassword.second,{ 'attr': { 'class': 'form-control', 'placeholder':'Repeat Password'}}) }}
                <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
            </div>
            <div class="text-right">
                <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-primary btn-block btn-flat"/>
            </div>
            
        {{ form_end(form) }}
        <a href="{{ path('fos_user_security_login') }}" >Back to Login</a>
    </div>
 </div>

