<!DOCTYPE html>
<html lang="{{ app.request.get('_locale') }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="An Online Versioning Control System for Git">
    <meta name="author" content="Paul Schweppe">

    <title>{% block title %}Commit{% endblock %}</title>
    {% block head %}
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.5 -->
    <link rel="stylesheet" href="{{ asset('bundles/versioncontolgitcontrol/bootstrap/css/bootstrap.min.css') }}" >
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    
    <link rel="stylesheet" href="{{ asset('bundles/versioncontolgitcontrol/theme/css/AdminLTE.min.css') }}" >
    <link rel="stylesheet" href="{{ asset('bundles/versioncontolgitcontrol/theme/css/skins/skin-green.min.css') }}" >

    <link href="{{ asset('bundles/versioncontolgitcontrol/theme/css/custom.css') }}" rel="stylesheet" type="text/css">
    
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    {% endblock %}    
  </head>
 
  <body class="hold-transition login-page">
    
    {% block body %}

 
            
            <!-- Alert Flash Messages -->
            <div class="row">
                <div class="col-lg-12">
                    {% for flashMessage in app.session.flashbag.get('notice') %}
                        <div class="alert alert-success">
                            <em>Notice</em>: {{ flashMessage|nl2br }}
                        </div>
                    {% endfor %}
                    {% for flashMessage in app.session.flashbag.get('error') %}
                        <div class="alert alert-danger">
                            <em>Error</em>: {{ flashMessage|nl2br }}
                        </div>
                    {% endfor %}
                    {% for flashMessage in app.session.flashbag.get('warning') %}
                        <div class="alert alert-warning">
                            <em>Notice</em>: {{ flashMessage|nl2br }}
                        </div>
                    {% endfor %}
                    {% for flashMessage in app.session.flashbag.get('info') %}
                        <div class="alert alert-info">
                            <em>Notice</em>: {{ flashMessage|nl2br }}
                        </div>
                    {% endfor %}
                </div>               
            </div>

                    
            <!-- Main content -->
            <section class="content">
                {% if app.request.hasPreviousSession %}
                    {% for type, messages in app.session.flashbag.all() %}
                        {% for message in messages %}
                            <div class="flash-{{ type }}">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                {% endif %}
              {% block fos_user_content %}
              {% endblock fos_user_content %}

            </section><!-- /.content -->
  

        <!-- Main Footer -->
        <footer class="login-footer">
          <!-- To the right -->
          <div class="pull-right hidden-xs">
            Version 0.1.0 (Alpha) 
          </div>
          <!-- Default to the left -->
          <strong>Copyright &copy; 2015 <a href="#">Paul Schweppe</a>.</strong> All rights reserved.
        </footer>


      <!-- REQUIRED JS SCRIPTS -->
      
      {% block footer %}
             <!-- jQuery -->
            <script src="{{ asset('bundles/VersionContol/js/jquery.js') }}"></script>

            <!-- Bootstrap Core JavaScript -->
            <script src="{{ asset('bundles/versioncontolgitcontrol/bootstrap/js/bootstrap.min.js') }}"></script>
            
            <script src="{{ asset('bundles/versioncontolgitcontrol/theme/js/app.min.js') }}"></script>
            
             <!-- tiny color js-->
            <script src="{{ asset('bundles/VersionContol/js/tinycolor-min.js') }}"></script>
            
             <!-- pick a color js -->
            <script src="{{ asset('bundles/VersionContol/js/pick-a-color-1.2.3.min.js') }}"></script>
            
             <!-- Applications javascript for the full site-->
            <script src="{{ asset('bundles/versioncontolgitcontrol/js/select2/v3.5/select2.min.js') }}"></script>
            
            <script src="{{ asset('bundles/VersionContol/js/app.js') }}"></script>
   

        {% endblock %} 
            
        {% block footerJS %}
        {% endblock %} 

    {% endblock %} 
  </body>
</html>