{% extends "VersionContolGitControlBundle::admin.layout.html.twig" %}


{% block topnavleft %}
    {% include 'VersionContolGitControlBundle::Partials/projectEnvironments.html.twig'  %}
{% endblock %}
            
{% block header %}
    
    
    <h1 class="page-header">
        Milestones
        <small>{{ project.title }}
            {% if (is_granted('MASTER', project)) %}
                (<span class="edit"><a href="{{ path('project_edit', { 'id': project.id }) }}">edit</a></span>)
            {% endif %}
        </small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="{{ path('home')}}"><i class="fa fa-product-hunt"></i> Projects</a>
        </li>
        <li >
            <i class="fa fa-bug"></i> <a href="{{path('issues', { 'id': project.id }) }}">Issues</a>
        </li>
        <li class="active">
                <i class="fa fa-file"></i> Milestones
            </li>
    </ol>
{% endblock %}

{% block sidemenu -%}
 {% include 'VersionContolGitControlBundle::Partials/sidemenu.html.twig'  %}
{% endblock %}

{% block content -%}


    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title"><i class="fa fa-bug fa-fw"></i> Milestones: 
                <span class="open">
                    <i class="fa fa-exclamation-circle fa-fw"></i>
                    <a  href="{{ path('issuemilestones', {'project': project.id }) }}">{{openCount}} open</a>
                </span>
                <span class="closed">
                    <i class="fa fa-check fa-fw"></i>
                    <a  href="{{ path(route, params | merge({ 'filter': 'closed' })|craue_removeKey('page')) }}">{{closedCount}} closed</a>
                </span>
            </h3>

            <div class="box-tools">
                 <a href="{{ path('issuemilestone_new',{ 'project': project.id }) }}" class="btn btn-primary btn-sm">
                     <i class="fa fa-plus"></i> New Milestone
                 </a>
            </div>
        </div>
        <div class="box-body">
                <div class="list-group">
                 {% for milestone in pagination %}
                    <div class="list-group-item">
                        <div class="row">
                            <div class="col-md-9">
                                    <h3 class="no-margin">
                                        <a href="{{ path('issuemilestone_show', { 'id': milestone.id, 'project': project.id }) }}" >{{ milestone.title }}</a>
                                    </h3>
                                    <div class="milestone-info">
                                            {% if(milestone.closed == false) %}
                                                {% if(milestone.dueOn) %}
                                                <span class="small" style="margin-right: 10px"> 
                                                        <i class="fa fa-calendar"></i>
                                                        Due By {{ milestone.dueOn|date('F j,Y \\a\\t h:m:s') }}
                                                </span>
                                               {% else %}
                                                    <span class="small" style="margin-right: 10px"> 
                                                        <i class="fa fa-calendar"></i>
                                                        No Due Date
                                                    </span>
                                               {% endif%}
                                            {% endif %}
                                            {% if milestone.updatedAt %}
                                                <span class="small"> 
                                                    <i class="fa fa-clock-o"></i>
                                                   Updated on {{ milestone.updatedAt|date('F j,Y \\a\\t h:m:s') }}
                                               </span>
                                            {% endif %}
                                            {% if(milestone.closed)%}
                                                <div class="col-md-6"> 
                                                    <i class="fa fa-times-circle"></i>
                                                   Closed on {{ milestone.closedAt|date('F j,Y \\a\\t h:m:s') }}
                                                </div>
                                            {% endif %}
                                        </div>
                                    <p>{{ milestone.description }}<p>
                                    
                            </div>
                            <div class="col-md-3">
                                <div class="pull-right">
                                    <a href="{{ path('issuemilestone_edit', { 'id': milestone.id, 'project': project.id }) }}" class="btn btn-primary btn-flat">
                                        <i class="fa fa-edit"></i> Edit
                                    </a>

                                    {% if(milestone.closed)%}
                                        <a href="{{ path('issuemilestone_open', { 'id': milestone.id}) }}" class="btn btn-danger btn-flat"><i class="fa fa-undo"></i>Re-Open Milestone</a>
                                    {% else %}
                                        <a href="{{ path('issuemilestone_close', { 'id': milestone.id}) }}" class="btn btn-danger btn-flat"><i class="fa fa-times-circle"></i> Close Milestone</a>    
                                    {%endif%}

                                </div>
                            </div>
                        </div>
                        
                    </div>

                {% endfor %}
            </div>
            <div class="count">
                {{ pagination.getTotalItemCount }}
            </div>
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>

{% endblock %}