{% extends "VersionContolGitControlBundle::layout.html.twig" %}

{% block sidemenu -%}
 {% include 'VersionContolGitControlBundle::Project/sidemenu.html.twig'  %}
{% endblock %}

{% block content -%}
    <h1 class="page-header">
       Pull
      <small>
          {{ project.title }} 
      </small>
          {% if (is_granted('MASTER', project)) %}
          <span class="edit"><a href="{{ path('project_edit', { 'id': project.id }) }}">edit</a></span>
        {% endif %}
    </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
            </li>
            <li class="active">
                <i class="fa fa-file"></i> Pull
            </li>
        </ol>

    <div class="panel panel-default">
        <div class="panel-heading">
            
        </div>
        <div class="panel-body">
            {% if(remoteVersions|length == 0)%}
                <div class="alert alert-warning" role="alert">You do not have any remote servers set up for this repository.</div>
            {% else %}
                <p>Pull remote changes to a local repository.</p>

                {{ form_start(pull_form,{ 'attr': { 'class': 'form'}}) }}

                    {{ form_errors(pull_form) }} 
                    
                    <div class="form-group">
                         {{ form_label(pull_form.remote) }}
                         {{ form_errors(pull_form.remote) }}
                         {{ form_widget(pull_form.remote,{ 'attr': { 'class': 'form-control', 'placeholder':'Please a remote server'}}) }}
                    </div>
                     
                     <div class="form-group">
                         {{ form_label(pull_form.branch) }}
                         {{ form_errors(pull_form.branch) }}
                         {{ form_widget(pull_form.branch,{ 'attr': { 'class': 'form-control', 'placeholder':'Please select a branch'}}) }}
                     </div>

                     <div class="text-right">
                         <a href="{{ path('project_log',{ 'id': project.id }) }}" class="btn btn-default">
                             Cancel
                         </a>
                         {{ form_widget(pull_form.submit, { 'attr': {'class': 'btn btn-success submit'} }) }}
                     </div>
                 {{ form_end(pull_form) }}
             {% endif %}

        </div>
    </div>

{% endblock %}
