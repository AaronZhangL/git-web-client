{% extends "VersionContolGitControlBundle::admin.layout.html.twig" %}

{% block topnavleft %}
 
{% endblock %}
            
{% block header %}
     
    <h1 class="page-header">
           New User
    </h1>
    <ol class="breadcrumb">
        <li class="active">
            <a href="{{ path('usermanagement')}}"><i class="fa fa-users"></i> User Management</a>
        </li>
        <li class="active">
            <i class="fa fa-user"></i> New User
        </li>
    </ol>
{% endblock %}

{% block sidemenu -%}
 {% include 'VersionContolGitControlBundle::Admin/sidemenu.html.twig'  %}
{% endblock %}

{% block content -%}

    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">
                <i class="fa fa-user fa-fw"></i> New User
            </h3>
        </div>
        <div class="box-body">
            {{ form_start(form,{ 'attr': { 'class': 'form'}}) }}

                {{ form_errors(form) }}                
                  <div class="form-group">
                     {{ form_label(form.username) }}
                     {{ form_errors(form.username) }}
                     {{ form_widget(form.username,{ 'attr': { 'class': 'form-control', 'placeholder':'Please enter a username'}}) }}
                 </div>
                 <div class="form-group">
                     {{ form_label(form.name) }}
                     {{ form_errors(form.name) }}
                     {{ form_widget(form.name,{ 'attr': { 'class': 'form-control', 'placeholder':'Please enter your name'}}) }}
                 </div>
                 <div class="form-group">
                     {{ form_label(form.email) }}
                     {{ form_errors(form.email) }}
                     {{ form_widget(form.email,{ 'attr': { 'class': 'form-control', 'placeholder':'Please enter an email address'}}) }}
                 </div>
                 <div class="form-group">
                     {{ form_label(form.plainPassword.first) }}
                     {{ form_errors(form.plainPassword.first) }}
                     {{ form_widget(form.plainPassword.first,{ 'attr': { 'class': 'form-control', 'placeholder':'Please enter a password'}}) }}
                 </div>
                 <div class="form-group">
                     {{ form_label(form.plainPassword.second) }}
                     {{ form_errors(form.plainPassword.second) }}
                     {{ form_widget(form.plainPassword.second,{ 'attr': { 'class': 'form-control', 'placeholder':'Please repeat password'}}) }}
                 </div>
                 <div class="form-group">
                     <label class="">Is this user an administrator?</label>
                     {{ form_errors(form.admin) }}
                     {{ form_widget(form.admin) }}
                 </div>
                 <div class="text-right">
                     <a href="{{ path('usermanagement') }}" class="btn btn-default">
                         Cancel
                     </a>
                     {{ form_widget(form.submit, { 'attr': {'class': 'btn btn-success'} }) }}
                 </div>
             {{ form_end(form) }}
        </div>
    </div>
             
{% endblock %}
