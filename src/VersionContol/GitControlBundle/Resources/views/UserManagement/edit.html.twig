{% extends "VersionContolGitControlBundle::layout.html.twig" %}


{% block content -%}
    <h1 class="page-header">
       Edit User
      <small>
          {{ user.name }} 
      </small>
    </h1>
    
    <ol class="breadcrumb">
        <li>
            <i class="fa fa-dashboard"></i>  <a href="index.html">admin</a>
        </li>
        <li>
            <i class="fa fa-user"></i>  <a href="index.html">User management</a>
        </li>
        <li class="active">
            <i class="fa fa-file"></i> Edit
        </li>
    </ol>

    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="col-lg-12">
                <h3 class="panel-title"><i class="fa fa-user fa-fw"></i> Edit User</h3>
            </div>
        </div>
        <div class="panel-body">
  
                {{ form_start(edit_form,{ 'attr': { 'class': 'form'}}) }}

                {{ form_errors(edit_form) }}                
                  <div class="form-group">
                     {{ form_label(edit_form.username) }}
                     {{ form_errors(edit_form.username) }}
                     {{ form_widget(edit_form.username,{ 'attr': { 'class': 'form-control', 'placeholder':'Please enter a username'}}) }}
                 </div>
                 <div class="form-group">
                     {{ form_label(edit_form.name) }}
                     {{ form_errors(edit_form.name) }}
                     {{ form_widget(edit_form.name,{ 'attr': { 'class': 'form-control', 'placeholder':'Please enter your name'}}) }}
                 </div>
                 <div class="form-group">
                     {{ form_label(edit_form.email) }}
                     {{ form_errors(edit_form.email) }}
                     {{ form_widget(edit_form.email,{ 'attr': { 'class': 'form-control', 'placeholder':'Please enter an email address'}}) }}
                 </div>
                 <div class="form-group">
                     {{ form_label(edit_form.current_password) }}
                     {{ form_errors(edit_form.current_password) }}
                     {{ form_widget(edit_form.current_password,{ 'attr': { 'class': 'form-control', 'placeholder':'Please enter current password'}}) }}
                 </div>

                  <div class="form-group">
                     {{ form_label(edit_form.admin) }}
                     {{ form_errors(edit_form.admin) }}
                     {{ form_widget(edit_form.admin) }}
                 </div>
                 <div class="text-right">
                     <a href="{{ path('home') }}" class="btn btn-default">
                         Cancel
                     </a>
                     {{ form_widget(edit_form.submit, { 'attr': {'class': 'btn btn-success'} }) }}
                 </div>
             {{ form_end(edit_form) }}
             </div>
             
        </div>
    </div>
{% endblock %}