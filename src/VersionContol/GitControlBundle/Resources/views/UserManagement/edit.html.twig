{% extends "VersionContolGitControlBundle::admin.layout.html.twig" %}

{% block topnavleft %}
 
{% endblock %}
            
{% block header %}
     
    <h1 class="page-header">
           Edit User
          <small>{{ user.name }}</small>
    </h1>
    <ol class="breadcrumb">
        <li class="active">
            <a href="{{ path('usermanagement')}}"><i class="fa fa-users"></i> User Management</a>
        </li>
        <li class="active">
            <i class="fa fa-user"></i> Edit User
        </li>
    </ol>
{% endblock %}

{% block sidemenu -%}
 {% include 'VersionContolGitControlBundle::Admin/sidemenu.html.twig'  %}
{% endblock %}


{% block content -%}

    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">
                <i class="fa fa-user fa-fw"></i> Edit User
            </h3>
        </div>
        <div class="box-body">
            {{ form_start(edit_form,{ 'attr': { 'class': 'form'}}) }}

                {{ form_errors(edit_form) }}                
                  <div class="form-group">
                     {{ form_label(edit_form.username) }}
                     {{ form_errors(edit_form.username) }}
                     {{ form_widget(edit_form.username,{ 'attr': { 'class': 'form-control', 'placeholder':'Please enter a username'}}) }}
                 </div>
                 <div class="form-group">
                     {{ form_label(edit_form.name) }}
                     {{ form_errors(edit_form.name) }}
                     {{ form_widget(edit_form.name,{ 'attr': { 'class': 'form-control', 'placeholder':'Please enter your name'}}) }}
                 </div>
                 <div class="form-group">
                     {{ form_label(edit_form.email) }}
                     {{ form_errors(edit_form.email) }}
                     {{ form_widget(edit_form.email,{ 'attr': { 'class': 'form-control', 'placeholder':'Please enter an email address'}}) }}
                 </div>
                 <div class="form-group">
                     {{ form_label(edit_form.current_password) }}
                     {{ form_errors(edit_form.current_password) }}
                     {{ form_widget(edit_form.current_password,{ 'attr': { 'class': 'form-control', 'placeholder':'Please enter current password'}}) }}
                 </div>

                 <div class="form-group">
                     <label class="">Is this user an administrator?</label>
                     {{ form_errors(edit_form.admin) }}
                     {{ form_widget(edit_form.admin) }}
                 </div>
                 <div class="text-right">
                     <a href="{{ path('usermanagement') }}" class="btn btn-default">
                         Cancel
                     </a>
                     {{ form_widget(edit_form.submit, { 'attr': {'class': 'btn btn-success'} }) }}
                 </div>
             {{ form_end(edit_form) }}
             </div>
             
        </div>
    </div>
{% endblock %}