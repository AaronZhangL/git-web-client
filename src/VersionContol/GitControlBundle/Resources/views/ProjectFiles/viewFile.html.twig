{% extends "VersionContolGitControlBundle::admin.layout.html.twig" %}


{% block topnavleft %}
    {% include 'VersionContolGitControlBundle::Partials/projectEnvironments.html.twig'  %}
{% endblock %}
            
{% block header %}
    
    <h1 class="page-header">
          Project File
          <small>{{ project.title }}
            {% if (is_granted('MASTER', project)) %}
                (<span class="edit"><a href="{{ path('project_edit', { 'id': project.id }) }}">edit</a></span>)
            {% endif %}
        </small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="{{ path('home')}}"><i class="fa fa-product-hunt"></i> Projects</a>
        </li>
        <li class="active">
            <i class="fa fa-file-code-o"></i> Project Files
        </li>
    </ol>
{% endblock %}

{% block sidemenu -%}
 {% include 'VersionContolGitControlBundle::Partials/sidemenu.html.twig'  %}
{% endblock %}


{% block content -%}
    <div class="box box-primary">
        <div class="box-header with-border">
             <h3 class="box-title"><i class="fa fa-file-code-o"> 
                </i> Current Branch: {{branchName|issueLink(project.id)|raw}}
             </h3>
        </div>
        <div class="box-body">
            <p>List all files in the project directory. This shows the files that are in the project environmnet folder and not just the files under git control.</p>
            <div class="list-group">
                <div class="list-group-item">
                    <div class="row">
                        <div class="col-md-12">
                            <strong>Path:</strong>/{{currentDir}}
                        </div>
                    </div>
                </div>
            </div>
            {% if(fileContents) %}
                <pre class="line-numbers"><code class="language-{{file.extension}}">{{ fileContents }}</code></pre>
            {% endif %}
        </div>
    </div>
{% endblock %}
