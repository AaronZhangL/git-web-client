<!DOCTYPE html>
<html lang="{{ app.request.get('_locale') }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="An Online Versioning Control System for Git">
    <meta name="author" content="Paul Schweppe">

    <title>{% block title %}Commit{% endblock %}</title>
    {% block head %}
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.5 -->
    <link rel="stylesheet" href="{{ asset('bundles/versioncontolgitcontrol/bootstrap/css/bootstrap.min.css') }}" >
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    
    <link rel="stylesheet" href="{{ asset('bundles/versioncontolgitcontrol/theme/css/AdminLTE.min.css') }}" >
    <link rel="stylesheet" href="{{ asset('bundles/versioncontolgitcontrol/theme/css/skins/skin-green.min.css') }}" >
    
    <link href="{{ asset('bundles/versioncontolgitcontrol/theme/css/pick-a-color-1.2.3.min.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('bundles/versioncontolgitcontrol/js/select2/v3.5/select2.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('bundles/versioncontolgitcontrol/js/select2/v3.5/select2-bootstrap.css') }}" rel="stylesheet" type="text/css">

    <link href="{{ asset('bundles/versioncontolgitcontrol/theme/css/custom.css') }}" rel="stylesheet" type="text/css">
    
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    {% endblock %}    
  </head>
 
  <body class="hold-transition skin-green sidebar-mini">
    {% set route = app.request.get('_route') %}
    {% set params = app.request.get('_route_params') | merge(app.request.query.all) %}
    {% block body %}
            <div class="wrapper">

        <!-- Main Header -->
        <header class="main-header">

          <!-- Logo -->
          <a class="logo" href="{{ path('home')}}">
              <!-- mini logo for sidebar mini 50x50 pixels -->
              <span class="logo-mini"><b>V</b>C</span>
              <!-- logo for regular state and mobile devices -->
              <span class="logo-lg"><b>Version</b> Control</span>
          </a>

          <!-- Header Navbar -->
          <nav class="navbar navbar-static-top" role="navigation">
            <!-- Sidebar toggle button-->
            <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
              <span class="sr-only">Toggle navigation</span>
            </a>
            
            <!-- Navbar Left Menu -->
            
            {% block topnavleft %}
            {% endblock %}
          
            <!-- /.Navbar Left Menu -->
            <!-- Navbar Right Menu -->
            <div class="navbar-custom-menu">
              <ul class="nav navbar-nav">
                  {% block topnav %}
                  {% endblock %}
                  
                <!-- User Account Menu -->
                <li class="dropdown user user-menu">
                  <!-- Menu Toggle Button -->
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <!-- The user image in the navbar-->
                    <img src="{{ asset('bundles/versioncontolgitcontrol/images/default_user_icon.jpg') }}" class="user-image" alt="User Image">
                    <!-- hidden-xs hides the username on small devices so only the image appears. -->
                    <span class="hidden-xs">{{ app.user.name }}</span>
                  </a>
                  <ul class="dropdown-menu">
                    <!-- The user image in the menu -->
                    <li class="user-header">
                      <img src="{{ asset('bundles/versioncontolgitcontrol/images/default_user_icon.jpg') }}" class="img-circle" alt="User Image">
                      <p>
                        {{ app.user.name }} - Web Developer
                        <small>Member since Nov. 2012</small>
                      </p>
                    </li>
                    <!-- Menu Body -->
                    <li class="user-body">
                      {% if (is_granted('ROLE_ADMIN')) %} 
                          <div class="col-xs-4 text-center">
                             <a href="{{path('usermanagement')}}">Admin</a>
                          </div>
                          <div class="col-xs-4 text-center">
                             <a href="{{path('home')}}">Projects</a>
                          </div>
                          <div class="col-xs-4 text-center">
                             <a href="#">Friends</a>
                          </div>
                          {%else%}
                          <div class="col-xs-6 text-center">
                             <a href="{{path('home')}}">Projects</a>
                          </div>
                          <div class="col-xs-6 text-center">
                             <a href="#">Friends</a>
                          </div>    
                      {% endif %}
                    </li>
                    <!-- Menu Footer-->
                    <li class="user-footer">
                      <div class="pull-left">
                        <a href="#" class="btn btn-default btn-flat">Profile</a>
                      </div>
                      <div class="pull-right">
                        <a href="{{ path('fos_user_security_logout') }}" class="btn btn-default btn-flat">Sign out</a>
                      </div>
                    </li>
                  </ul>
                </li>
                <!-- Control Sidebar Toggle Button -->
                <li>
                  <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
                </li>
              </ul>
            </div>
          </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">

          <!-- sidebar: style can be found in sidebar.less -->
          <section class="sidebar">

            <!-- Sidebar user panel (optional) -->
            <div class="user-panel">
              <div class="pull-left image">
                <img src="{{ asset('bundles/versioncontolgitcontrol/images/default_user_icon.jpg') }}" class="img-circle" alt="User Image">
              </div>
              <div class="pull-left info">
                <p>{{ app.user.name }}</p>
                <!-- Status -->
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
              </div>
            </div>
            
            {% block sidemenu %}
            <!-- Sidebar Menu -->
                <ul class="sidebar-menu">
                  <li class="header">MAIN NAVIGATION</li>
                  <!-- Optionally, you can add icons to the links -->
                  <li class="active">
                        <a href="{{ path('home') }}"><i class="fa fa-fw fa-product-hunt"></i><span>My Projects</span></a>
                  </li>
                  
                </ul><!-- /.sidebar-menu -->
            {% endblock %}
          </section>
          <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            {% block topcontent %}{% endblock %} 
            
            <!-- Alert Flash Messages -->
            <div class="row">
                <div class="col-lg-12">
                    {% for flashMessage in app.session.flashbag.get('notice') %}
                        <div class="alert alert-success">
                            <em>Notice</em>: {{ flashMessage|nl2br }}
                        </div>
                    {% endfor %}
                    {% for flashMessage in app.session.flashbag.get('error') %}
                        <div class="alert alert-danger">
                            <em>Error</em>: {{ flashMessage|nl2br }}
                        </div>
                    {% endfor %}
                    {% for flashMessage in app.session.flashbag.get('warning') %}
                        <div class="alert alert-warning">
                            <em>Notice</em>: {{ flashMessage|nl2br }}
                        </div>
                    {% endfor %}
                    {% for flashMessage in app.session.flashbag.get('info') %}
                        <div class="alert alert-info">
                            <em>Notice</em>: {{ flashMessage|nl2br }}
                        </div>
                    {% endfor %}

                </div>               
            </div>

                    
          <!-- Content Header (Page header) -->
          <section class="content-header">
              {% block header %}
                <h1>
                  Page Header
                  <small>Optional description</small>
                </h1>
                <ol class="breadcrumb">
                  <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
                  <li class="active">Here</li>
                </ol>
            {% endblock %} 
          </section>

          <!-- Main content -->
          <section class="content">

              {% block content %}{% endblock %} 
            <!-- Your Page Content Here -->

          </section><!-- /.content -->
        </div><!-- /.content-wrapper -->

        <!-- Main Footer -->
        <footer class="main-footer">
          <!-- To the right -->
          <div class="pull-right hidden-xs">
            Version 0.1.0 (Alpha) 
          </div>
          <!-- Default to the left -->
          <strong>Copyright &copy; 2015 <a href="#">Paul Schweppe</a>.</strong> All rights reserved.
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
          <!-- Create the tabs -->
          <ul class="nav nav-tabs nav-justified control-sidebar-tabs">
            <li class="active"><a href="#control-sidebar-home-tab" data-toggle="tab"><i class="fa fa-home"></i></a></li>
            <li><a href="#control-sidebar-settings-tab" data-toggle="tab"><i class="fa fa-gears"></i></a></li>
          </ul>
          <!-- Tab panes -->
          <div class="tab-content">
            <!-- Home tab content -->
            <div class="tab-pane active" id="control-sidebar-home-tab">
              <h3 class="control-sidebar-heading">Recent Activity</h3>
              <ul class="control-sidebar-menu">
                <li>
                  <a href="javascript::;">
                    <i class="menu-icon fa fa-birthday-cake bg-red"></i>
                    <div class="menu-info">
                      <h4 class="control-sidebar-subheading">Langdon's Birthday</h4>
                      <p>Will be 23 on April 24th</p>
                    </div>
                  </a>
                </li>
              </ul><!-- /.control-sidebar-menu -->

              <h3 class="control-sidebar-heading">Tasks Progress</h3>
              <ul class="control-sidebar-menu">
                <li>
                  <a href="javascript::;">
                    <h4 class="control-sidebar-subheading">
                      Custom Template Design
                      <span class="label label-danger pull-right">70%</span>
                    </h4>
                    <div class="progress progress-xxs">
                      <div class="progress-bar progress-bar-danger" style="width: 70%"></div>
                    </div>
                  </a>
                </li>
              </ul><!-- /.control-sidebar-menu -->

            </div><!-- /.tab-pane -->
            <!-- Stats tab content -->
            <div class="tab-pane" id="control-sidebar-stats-tab">Stats Tab Content</div><!-- /.tab-pane -->
            <!-- Settings tab content -->
            <div class="tab-pane" id="control-sidebar-settings-tab">
              <form method="post">
                <h3 class="control-sidebar-heading">General Settings</h3>
                <div class="form-group">
                  <label class="control-sidebar-subheading">
                    Report panel usage
                    <input type="checkbox" class="pull-right" checked>
                  </label>
                  <p>
                    Some information about this general settings option
                  </p>
                </div><!-- /.form-group -->
              </form>
            </div><!-- /.tab-pane -->
          </div>
        </aside><!-- /.control-sidebar -->
        <!-- Add the sidebar's background. This div must be placed
             immediately after the control sidebar -->
        <div class="control-sidebar-bg"></div>
      </div><!-- ./wrapper -->

      <!-- REQUIRED JS SCRIPTS -->
      
      {% block footer %}
             <!-- jQuery -->
            <script src="{{ asset('bundles/VersionContol/js/jquery.js') }}"></script>

            <!-- Bootstrap Core JavaScript -->
            <script src="{{ asset('bundles/versioncontolgitcontrol/bootstrap/js/bootstrap.min.js') }}"></script>
            
            <script src="{{ asset('bundles/versioncontolgitcontrol/theme/js/app.js') }}"></script>
            
             <!-- tiny color js-->
            <script src="{{ asset('bundles/VersionContol/js/tinycolor-min.js') }}"></script>
            
             <!-- pick a color js -->
            <script src="{{ asset('bundles/VersionContol/js/pick-a-color-1.2.3.min.js') }}"></script>
            
             <!-- Applications javascript for the full site-->
            <script src="{{ asset('bundles/versioncontolgitcontrol/js/select2/v3.5/select2.min.js') }}"></script>
            
            <script src="{{ asset('bundles/VersionContol/js/app.js') }}"></script>
   
            
        {% endblock %} 
            
        {% block footerJS %}
        {% endblock %} 

    {% endblock %} 
    
    <!-- Default bootstrap modal example -->
    <div class="modal modal-info fade" id="issueModal" tabindex="-1" role="dialog" aria-labelledby="issueModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="issueModalLabel">Loading Data</h4>
          </div>
          <div class="modal-body">
            
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>