{% extends "VersionContolGitControlBundle::admin.layout.html.twig" %}


{% block header %}
    <h1 class="page-header">
           Projects
          <small>Your Git Projects</small>
    </h1>
    <ol class="breadcrumb">
        <li class="active">
            <i class="fa fa-product-hunt"></i> Projects
        </li>
    </ol>
{% endblock %}

{% block content -%}

    <div class="box">
        <div class="box-header">
            <h3 class="box-title">My Projects: {{ userProjects.getTotalItemCount }}</h3>
            
            <div class="box-tools">
                <form action="{{ path('home') }}" method="GET">
                    <div class="input-group input-group-sm" style="width: 250px;">

                        <input type="text" name="keyword" class="form-control pull-right" placeholder="Search">

                        <div class="input-group-btn">
                          <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
        <div class="box-body">
            <a href="{{ path('project_new') }}" class="btn btn-sm btn-info btn-flat pull-right">New Project</a>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Access</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for userProject in userProjects %}
                     <tr>
                       <th scope="row">{{loop.index}}</th>
                       <td><a href="{{ path('project_log', { 'id': userProject.project.id }) }}" class="">{{userProject.project.title}}</a></td>
                       <td>{{userProject.project.description}}</td>
                       <td><span class="label label-success">{{userProject.roles}}</label></td>
                       <td style="width:180px">
                           <a href="{{ path('project_log', { 'id': userProject.project.id }) }}" class="btn btn-primary btn-flat">Open</a>
                           <a href="{{ path('project_edit', { 'id': userProject.project.id }) }}" class="btn btn-info btn-flat">Edit</a>
                       </td>
                     </tr>
                   {% endfor %}
                </tbody>
              </tbody>
            </table>   
        </div>
        <div class="box-footer clearfix">
            <div class="text-right">
                {{ knp_pagination_render(userProjects) }}
            </div>
        </div>
    </div>      
{% endblock %}